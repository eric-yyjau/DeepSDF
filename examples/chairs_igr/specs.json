{
  "Description" : [ "This experiment learns a shape representation for chairs ",
                    "using data from ShapeNet version 2." ],
  "DataSource" : "data",
  "TrainSplit" : "examples/splits/sv2_chairs_train.json",
  "TestSplit" : "examples/splits/sv2_chairs_test.json",
  "Exp_mode": "IGR",
  "NetworkArch" : "igr_decoder",
  "NetworkSpecs" : {
    "dims" : [ 512, 512, 512, 512, 512, 512, 512, 512 ],
    "skip_in" : [4],
    "geometric_init" : true,
    "radius_init" : 1,
    "beta": 100
    },
  "loss": "smoothl1",
  "CodeLength" : 256,
  "NumEpochs" : 2001,
  "SnapshotFrequency" : 1000,
  "AdditionalSnapshots" : [ 100, 500 ],
  "LearningRateSchedule" : [
    {
      "Type" : "Step",
      "Initial" : 0.0005,
      "Interval" : 500,
      "Factor" : 0.5
    },
    {
      "Type" : "Step",
      "Initial" : 0.001,
      "Interval" : 500,
      "Factor" : 0.5
    }],
  "SamplesPerScene" : 16384,
  "ScenesPerBatch" : 4,
  "DataLoaderThreads" : 4,
  "ClampingDistance" : 1.0,
  "CodeRegularization" : true,
  "CodeRegularizationLambda" : 1e-4,
  "CodeBound" : 1.0
}

